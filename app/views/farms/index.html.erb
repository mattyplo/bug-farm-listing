<h1>farms listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Country</th>
      <th>Website</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @farms.each do |farm| %>
      <tr>
        <td><%= farm.name %></td>
        <td><%= farm.description %></td>
        <td><%= farm.country %></td>
        <td><a href="<%= farm.website %>" target="_blank">website</a></td>
        <td><%= link_to 'Show', farm_path(farm.id) %></td>
        <td><%= link_to 'Edit', edit_farm_path(farm.id) %></td>
        <td><%= link_to 'Delete', farm_path(farm.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Create new farm', new_farm_path %></p>
