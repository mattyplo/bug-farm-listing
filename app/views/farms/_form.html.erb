<div class="container">
  <% if @farm.errors.any? %>
    <h2> The following errors prevented the farm from being saved </h2>
    <ul>
      <% @farm.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-10"
      <%= form_with(model: @farm, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-light"  %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of the farm" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light"  %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of the farm" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :website, class: "col-2 col-form-label text-light"  %>
          <div class="col-10">
            <%= f.text_field :website, class: "form-control shadow rounded", placeholder: "website url" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :country, class: "col-2 col-form-label text-light"  %>
          <div class="col-10">
            <%= f.text_field :country, class: "form-control shadow rounded", placeholder: "country farm is in" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-dark btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to 'Cancel and return to farms listing', farms_path, class: "text-info" %>
  </div>
</div>