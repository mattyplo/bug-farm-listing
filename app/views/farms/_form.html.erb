<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-10">
      <%= render 'shared/errors', obj: @farm %>
      <%= form_with(model: @farm, class: "shadow p-3 mb-3 bg-secondary rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-sm-2 col-form-label text-light"  %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of the farm" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-sm-2 col-form-label text-light"  %>
          <div class="col-sm-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of the farm" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :website, class: "col-sm-2 col-form-label text-light"  %>
          <div class="col-sm-10">
            <%= f.text_field :website, class: "form-control shadow rounded", placeholder: "website url" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :country, class: "col-sm-2 col-form-label text-light"  %>
          <div class="col-sm-10">
            <%= f.text_field :country, class: "form-control shadow rounded", placeholder: "country farm is in" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to 'Cancel and return to farms listing', farms_path, class: "text-info" %>
    </div>
  </div>
</div>