<h1>Add a new Bug farm to the listing</h1>

<% if @farm.errors.any? %>
  <h2> The following errors prevented the farm from being saved </h2>
  <ul>
    <% @farm.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with scope: :farm, url: farms_path, local: true do |f| %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :website %><br/>
    <%= f.text_field :website %>
  </p>
  <p>
    <%= f.label :country %><br/>
    <%= f.text_field :country %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>